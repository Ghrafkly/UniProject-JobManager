<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="700.0" prefWidth="1300.0" type="AnchorPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="1300.0">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Create Job">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="371.0" prefWidth="1600.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="24.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefWidth="200.0" text="Job Title">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfTitle" prefHeight="30.0" prefWidth="400.0">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="182.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefHeight="114.0" prefWidth="200.0" text="Description">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="taDescription" prefHeight="400.0" prefWidth="400.0" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="37.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefWidth="200.0" text="Salary">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Spinner fx:id="spSalary" prefHeight="50.0" prefWidth="400.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="27.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefWidth="200.0" text="Postcode">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfLocation" prefHeight="30.0" prefWidth="400.0">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefWidth="200.0" text="Certification">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cbCertification" prefHeight="50.0" prefWidth="400.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="10.0" layoutY="194.0" prefHeight="21.0" prefWidth="1600.0" spacing="50.0">
                           <children>
                              <Label alignment="TOP_LEFT" prefWidth="200.0" text="Status">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cbStatus" prefHeight="50.0" prefWidth="400.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="35.0" prefWidth="300.0" text="Back">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnNext" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="300.0" text="Next">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</fx:root>
