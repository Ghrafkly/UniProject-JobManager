<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root id="header" fx:id="header" alignment="CENTER" prefHeight="120.0" prefWidth="1600.0" spacing="200.0" type="HBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text id="logo" fx:id="logo" strokeType="OUTSIDE" strokeWidth="0.0" text="MonJs">
         <font>
            <Font size="48.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="120.0" prefWidth="871.0" spacing="10.0">
         <children>
            <ComboBox fx:id="cbCategory" prefHeight="30.0" prefWidth="203.0" />
            <TextField fx:id="tfSearchBox" prefHeight="25.0" prefWidth="285.0">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="30.0" text="Search">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnAdvancedSearch" mnemonicParsing="false" prefHeight="30.0" prefWidth="138.0" text="Advanced Search">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ImageView fitHeight="86.0" fitWidth="124.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/monash.png" />
         </image>
         <HBox.margin>
            <Insets right="40.0" />
         </HBox.margin>
      </ImageView>
   </children>
</fx:root>
